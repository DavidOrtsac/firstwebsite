<style type="text/css">
   body { background: rgba(244, 244, 244, 0.8) } /* Adding !important forces the browser to overwrite the default style applied by Bootstrap */
</style>

<div class="align-items-center justify-content-center mx-auto w-50 bg-white p-5 m-5 rounded-5 shadow">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <h2 class="text-center fw-bold">Create an account</h2>
  <br/>
  <div class="form-floating mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control bg-light rounded-4", placeholder: "Email" %>
    <%= f.label :email, class: "form-label" %>
  </div>
  <div class="form-floating mb-3">
    <!-- <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br /> -->
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control bg-light rounded-4", placeholder: "Password" %>
    <%= f.label :password, class: "form-label" %>
  </div>
  <div class="form-floating mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control bg-light rounded-4", placeholder: "Password Confirmation" %>
    <%= f.label :password_confirmation, class: "form-label" %>
  </div>
  <br/>
  <div class="actions text-center">
    <%= f.submit "Continue", class: "btn btn-primary btn-lg rounded-pill w-100" %>
  </div>
  <br/>
    <p class="text-center"> By clicking "continue", you agree to our terms and conditions. </p>
  <hr/>
  <br/>
  <div class="actions text-center">
    <%= link_to "Sign in", new_session_path(resource_name), class: "text-center" %><br />
  </div>
<% end %>
</div>
</div>